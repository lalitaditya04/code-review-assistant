# Code Review Assistant - Environment Configuration

# ===========================================
# AI/LLM API Configuration
# ===========================================
# Choose your AI provider and add the corresponding API key

# Option 1: Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: OpenAI GPT (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Option 3: Google Gemini (Alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# Option 4: Other providers (add as needed)
# CUSTOM_API_KEY=your_custom_api_key_here

# ===========================================
# AI Provider Selection
# ===========================================
# Choose which AI provider to use: "anthropic", "openai", or "gemini"
AI_PROVIDER=anthropic

# Model Configuration
AI_MODEL=claude-sonnet-4-20250514  # For Anthropic
# AI_MODEL=gpt-4-turbo-preview  # For OpenAI
# AI_MODEL=gemini-2.0-flash  # For Google Gemini

# ===========================================
# Application Settings
# ===========================================
APP_NAME="Code Review Assistant"
DEBUG=True

# Database
DATABASE_URL=sqlite:///./reviews.db

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=.py,.js,.java,.ts,.jsx,.tsx,.go,.rb,.php,.cpp,.c,.cs,.swift

# API Settings
MAX_TOKENS=2000
API_TIMEOUT=60
